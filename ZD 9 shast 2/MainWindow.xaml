<Window x:Class="ZD_9_shast_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZD_9_shast_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="redcolor">
            <Setter Property="Control.Foreground" Value="Red"/>
            <Setter Property="Control.FontSize" Value="20"/>
            <Setter Property="Control.Margin" Value="10"/>
        </Style>
    </Window.Resources>
    <UniformGrid Rows="4">
        <Button Content="Кнопка 1" Style="{StaticResource redcolor}"/>
        <Button Content="Кнопка 2"/>
        <Button Content="Кнопка 3" Background="Green"/>
        <TextBlock Text="123" Style="{StaticResource redcolor}"/>
    </UniformGrid>
</Window>
